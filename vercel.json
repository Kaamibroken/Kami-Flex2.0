{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "database/*.html", "use": "@vercel/static" },
    { "src": "database/*.js", "use": "@vercel/static" },
    { "src": "images/*", "use": "@vercel/static" },
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/home", "dest": "/home.html" },
    { "src": "/tool", "dest": "/Tool.html" },
    { "src": "/signup", "dest": "/signup.html" },
    { "src": "/signin", "dest": "/signin.html" },

    { "src": "/database/data", "dest": "/database/data.html" },
    { "src": "/database/data.js", "dest": "/database/data.js" },
    { "src": "/images/(.*)", "dest": "/database/images/$1" },

    { "src": "/api/(.*)", "dest": "/api/$1.js" }
  ]
}
